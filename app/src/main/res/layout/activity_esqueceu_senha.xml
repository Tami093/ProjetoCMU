<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="activities.estgf.ipp.pt.projetocmu.CadastroActivity"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/estgf"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:text="Redefinição de senha"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:textSize="15dp"
            android:text="Digite o e-mail para ser enviado um link por e-mail"/>

        <EditText
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:textSize="17dp"
            android:paddingTop="10dp"
            android:paddingLeft="10sp"
            android:id="@+id/esqueceuSenha_digitarEmail_editText"
            android:hint="E-mail"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="150sp"
            android:id="@+id/esqueceuSenha_botaoEnviar_button"
            android:text="Enviar"/>

    </LinearLayout>
</ScrollView>
