<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginLeft="6sp"
        android:id="@+id/listItemVagasEmpregoDaEmpresa_nomeVaga_textView"
        android:text="Nome da Vaga" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="20dp"
            android:layout_width="20sp"
            android:layout_marginLeft="6sp"
            android:src="@drawable/ic_place_black_24dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="4sp"
            android:id="@+id/listItemVagasEmpregoDaEmpresa_localTrabalho_textView"
            android:text="Localidade do Trabalho"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="20dp"
            android:layout_width="20sp"
            android:layout_marginLeft="6sp"
            android:src="@drawable/ic_attach_money_black_24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="4sp"
            android:id="@+id/listItemVagasEmpregoDaEmpresa_valorSalario_textView"
            android:text="Quantidade de Salario"/>
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="15sp"
            android:layout_marginLeft="6sp"
            android:src="@drawable/ic_euro_symbol_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="12sp"
            android:id="@+id/listItemVagasEmpregoDaEmpresa_qtdPessoasParaVaga_textView"
            android:text="Quantidade pessoas para VAga"/>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItemVagasEmpregoDaEmpresa_verificarParticipantes_button"
        android:text="Vizualizar Candidatos"/>


</LinearLayout>