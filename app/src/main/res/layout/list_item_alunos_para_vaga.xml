<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="15sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="6sp"
        android:id="@+id/listItem_nomeDoAlunoCandidato_textView"
        android:text="Nome Do Aluno" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_marginLeft="2sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="4sp"
            android:textStyle="bold"
            android:id="@+id/listItem_emailAlunoCandidato_textView"
            android:text="Email Aluno"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="4sp"
            android:textStyle="bold"
            android:id="@+id/listItem_telefoneAlunoCandidato_textView"
            android:text="Telefone do Aluno"/>
    </LinearLayout>

</LinearLayout>